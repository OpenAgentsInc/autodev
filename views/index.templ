package views

templ Index() {
	<html>
		<head>
			<title>Greptile Extism App</title>
			<script src="https://unpkg.com/htmx.org@1.9.2"></script>
			<link href="/static/css/output.css" rel="stylesheet">
		</head>
		<body class="bg-gray-100">
			<div class="container mx-auto p-4">
				<h1 class="text-2xl font-bold mb-4">Greptile Extism App</h1>
				<form hx-post="/run-plugin" hx-target="#result">
					<select name="operation" class="mb-2 p-2 border rounded">
						<option value="index">Index</option>
						<option value="query">Query</option>
						<option value="search">Search</option>
					</select>
					<input type="text" name="input" placeholder="Repository or query" class="mb-2 p-2 border rounded" />
					<button type="submit" class="bg-blue-500 text-white p-2 rounded">Run Plugin</button>
				</form>
				<div id="result" class="mt-4 p-4 bg-white rounded shadow"></div>
			</div>
		</body>
	</html>
}
